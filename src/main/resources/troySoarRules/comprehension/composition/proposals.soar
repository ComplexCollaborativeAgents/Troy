sp {composition*propose*compose-action-object
    (state <s>    ^name composition
                  ^map <map>
                  ^indexed-action <ia>
                  ^grounding <g>)
    (<map>    ^procedural <pid>
              ^linguistic <lid>)
    (<pid> ^{<argument> <> op_name} <arg-id>)
    (<lid>    -^<any-arg> <arg-id>)
    (<ia> -^<argument> <any-value>)
-->
    (<s>    ^operator <op> +)
    (<op>    ^name compose-action-object
             ^procedural-argument <argument>
             ^procedural-argument-id <arg-id>
             ^linguistic <lid>
             ^indexed-action <ia>
             ^grounding <g>)
    }
           

sp {composition*propose*complete-composition
    (state <s> ^name composition)
-->
    (<s> ^operator <op> + <)
    (<op> ^name complete-composition)
    }
               