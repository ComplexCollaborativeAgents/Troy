sp {interaction*propose*create-segment
    (state <s> ^name interaction
               ^message <m1>
               -^interaction.stack.segment.message <m1>)
-->
    (<s> ^operator <op> +)
    (<op> ^name create-segment
          ^message <m1>)
    }

sp {interaction*propose*delete-segment
    (state <s> ^name interaction
               ^interaction.stack.segment <seg>)
    (<seg> ^status complete)
-->
    (<s> ^operator <op> +)
    (<op> ^name delete-segment
          ^segment <seg>)
    }

sp {interaction*propose*complete-interaction
    (state <s> ^name interaction)
-->
    (<s> ^operator <op> + <)
    (<op> ^name complete-interaction)
    }
